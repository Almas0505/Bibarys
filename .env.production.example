# Production Environment Variables

# Application
APP_NAME=Bibarys E-Commerce
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Database
# IMPORTANT: Use a strong, randomly generated password in production
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@db:5432/bibarys

# PostgreSQL password - set this in your environment
# Example: POSTGRES_PASSWORD=$(openssl rand -base64 32)
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD

# Security
# IMPORTANT: Generate a secure SECRET_KEY using a cryptographically secure method
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOMLY_GENERATED_KEY_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# Storage (Optional - for file uploads)
UPLOAD_DIR=./static/uploads
MAX_UPLOAD_SIZE=10485760

# Redis (Optional - for caching and sessions)
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
